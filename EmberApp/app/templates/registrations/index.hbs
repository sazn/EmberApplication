{{!-- app/templates/registrations/index.hbs --}}
<div class="container mt-5">
  <h1 class="mb-4 text-center">User Registrations</h1>

  <div class="text-end mb-3">
    <LinkTo @route="registrations.new" class="btn btn-success">+ Add New Registration</LinkTo>
  </div>

  <div class="row">
    {{#if this.model.length}}
    {{#each this.model as |registration|}}
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{registration.name}}</h5>
          <p class="card-text">Email: {{registration.email}}</p>
          <p class="card-text">Account Type: {{registration.accountType}}</p>
          <div class="d-flex justify-content-between">
            {{!-- <span class="badge bg-primary">{{registration.id}}</span> --}}
            <div>
              <LinkTo @route="registrations.edit" @model={{registration}} class="btn btn-warning btn-sm me-1">Edit
              </LinkTo>
              <button class="btn btn-danger btn-sm" {{on "click" (fn this.deleteRegistration
                registration.id)}}>Delete</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
    <div class="alert alert-warning" role="alert">
      No registrations found.
    </div>
    {{/if}}
  </div>
</div>