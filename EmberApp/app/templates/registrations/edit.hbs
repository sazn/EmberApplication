{{!-- app/templates/registrations/edit.hbs --}}
<h1>Edit Registration</h1>
<form {{on "submit" this.updateRegistration}}>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" id="name" class="form-control" value={{this.model.name}} onInput={{action (mut this.model.name)
      value="target.value" }}>
    {{!-- <Input class="form-control" id="name" @type="text" @value={{this.model.name}} /> --}}
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" id="email" class="form-control" value={{this.model.email}} onInput={{action (mut
      this.model.email) value="target.value" }}>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" class="form-control" id="password" value={{this.model.password}} oninput={{action (mut
      this.model.password) value="target.value" }}>
  </div>
  <div class="mb-3">
    <label for="accountType" class="form-label">Account Type</label>
    <select id="accountType" class="form-select" value={{this.model.accountType}} onChange={{action (mut
      this.model.accountType) value="target.value" }}>
      <option value="Fixed">Fixed</option>
      <option value="Saving">Saving</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Update Registration</button>
</form>